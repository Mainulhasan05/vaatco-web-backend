# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/vaatco_db
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/vaatco_db

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRE=30d

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Admin Default Credentials (for initial setup)
ADMIN_EMAIL=admin@vaatco.com
ADMIN_PASSWORD=SecurePassword123!

# CORS Configuration
FRONTEND_URL=https://vaatcobd.com
ADMIN_PANEL_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100